
{
  "name": "YouTube Enhancer",
  "version": "1.0.0",
  "description": "Enhance your YouTube experience with powerful features",
  "manifest_version": 3,
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "oauth2": {
    "client_id": "291238784692-9gbi316h4hh28q4lviivmv0sethoa7mc.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.force-ssl"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
